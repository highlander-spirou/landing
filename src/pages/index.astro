---
import "@fontsource-variable/nunito";

import NavAstro from "@components/Navbar/NavAstro.astro";
import BottomNav from "@components/Navbar/BottomNav.astro";
// import NavbarTest from "@components/Navbar/NavbarTest";
// import Navbar from "@components/Navbar/Navbar";

import Introduction from "../sections/Introduction.astro";
import Education from "../sections/Education.astro";
import Experiences from "../sections/Experiences.astro";
import BaseHead from "@components/BaseHead.astro";
---

<script>
  import { $settings } from "src/store/config";

  $settings.subscribe((value) => {
    document.documentElement.setAttribute("data-theme", value.theme);
  });
</script>

<script>
  import $currentSection from "src/store/currentSection";

  const sections = document.querySelectorAll("section");

  window.addEventListener("scroll", () => {
    let sectionId;
    sections.forEach((section) => {
      const sectionHeight = section.offsetHeight;
      const sectionTop = section.offsetTop - 100;
      sectionId = section.getAttribute("id");
      if (
        window.scrollY > sectionTop &&
        window.scrollY <= sectionTop + sectionHeight
      ) {
        $currentSection.set(sectionId);
      }
    });
  });
</script>

<html lang="en" data-theme="emerald">

  <BaseHead />
  <body class="relative">
    <div class="h-20 sticky top-0 bg-base-100 z-10">
      <NavAstro />
    </div>

    <Introduction lang="en" />
    <Education lang="en" />
    <Experiences lang="en" />
    <BottomNav />
  </body><style is:global>
    html {
      scroll-behavior: smooth;
    }
    body {
      font-family: "Nunito Variable", sans-serif;
    }
  </style>
</html>
