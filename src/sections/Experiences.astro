---
import CardSlider from "@components/Slider/CardSlider";
import { Modal } from "@components/Modal";
import SelectMenu from "@components/Select";
import { experienceContent } from "src/store/content";

const { lang } = Astro.props;
const content = experienceContent[lang]
---

<section
  id="experiences"
  class="h-fit py-20">
  <div class="w-[90%] mx-auto">
    <h1 class="text-5xl font-bold text-center">{content.header}</h1>
    <p class="mt-5">
      {content.line1}
    </p>
    <p>
      {content.line2}
    </p>
    <div class="mt-5">
      <div class="flex justify-end mb-5">
        <SelectMenu client:load />
      </div>
      <CardSlider client:load />
    </div>
    <Modal client:load />
  </div>
</section>
